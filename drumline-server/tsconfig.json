{
    "compilerOptions": {
        "target": "ES2022", // ES2022 instead of ES6 because we want to use 'await' with redis
        "module": "ES2022",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "./dist"]
}
