{
    "name": "drumline-server",
    "version": "0.0.3",
    "description": "Service to coordinate co-solving across multiple drumline crossword clients.",
    "main": "index.ts",
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup -c -w",
        "dev": "npm-run-all --parallel watch start",
        "clean": "rm -rf ./dist",
        "format": "prettier --write .",
        "lint": "prettier --check . && eslint .",
        "start": "node --watch dist/index.mjs",
        "test": "npm run test:unit",
        "test:unit": "vitest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/chrisrude/drumline.git"
    },
    "author": "Christopher Rude <chris@rudesoftware.net>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/chrisrude/drumline/issues"
    },
    "homepage": "https://github.com/chrisrude/drumline#readme",
    "dependencies": {
        "base-emoji": "^2.0.1",
        "cookie-session": "^2.0.0",
        "drumline-lib": "file:../common",
        "express": "^4.18.2",
        "redis": "4.6.7",
        "ws": "^8.13.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.3",
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@rollup/plugin-terser": "^0.4.3",
        "@types/cookie-session": "^2.0.44",
        "@types/express": "^4.17.17",
        "@types/node": "^20.4.5",
        "@types/websocket": "^1.0.5",
        "@types/ws": "^8.5.5",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.9.0",
        "eslint-plugin-prettier": "^5.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.0.0",
        "tslib": "^2.6.1",
        "typescript": "^5.1.6",
        "vitest": "^0.32.2"
    },
    "type": "module"
}