{
    "compilerOptions": {
        "target": "es6",
        "module": "ES6",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true
    },
    "include": ["/**/*.ts"],
    "exclude": ["node_modules", "./dist"]
}
